<% if @item_updated.eql?(true) %>
  swal({
      icon: "success",
      title: 'Success',
      buttons: false,
      timer: 3000,
      text: "<%= t('views.items.item_updated') %>"}).then(function(){
      window.location = '<%= item_path(@item) %>'
  });
<% else %>
  swal({
      icon: "error",
      title: 'Oops..!',
      buttons: false,
      timer: 3000,
      text: "<%= @item.errors.full_messages.join('.') %>"
  });
<% end %>