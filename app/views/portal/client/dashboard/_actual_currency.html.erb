  <h4>Invoices</h4>
  <%= area_chart @client_invoices_chart_data,
                 legend: 'bottom',
                 download: true,
                 colors: ['#00BDE5', '#8EC42A', '#F06312', '#B4E7FA', '#ECECEC', '#FFD502', '#812990', '#04A894', '#650052', '#99728D', '#FF0100', '#0721F8', '#964E27', '#F8E7A0']
  %>
  <!--<div id="graph_container"></div>-->
  <h4>Payments</h4>
  <%= area_chart @client_payments_chart_data,
                 legend: 'bottom',
                 download: true,
                 colors: ['#00BDE5', '#8EC42A', '#F06312', '#B4E7FA', '#ECECEC', '#FFD502', '#812990', '#04A894', '#650052', '#99728D', '#FF0100', '#0721F8', '#964E27', '#F8E7A0']
  %>
</div>