<% if @client_exists %>
    showWarningSweetAlert('error', "<%= t('views.clients.duplicate_email') %>", function(){});
<% else %>
  swal({
      icon: "success",
      title: 'Success',
      buttons: false,
      timer: 3000,
      text: "<%= t('views.clients.created_msg') %>"}).then(function(){
      window.location = '<%= client_path(@client) %>'
});
<% end %>
