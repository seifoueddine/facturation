<% if @client_updated.eql?(true) %>
  swal({
      icon: "success",
      title: 'Success',
      buttons: false,
      timer: 3000,
      text: "<%= t('views.clients.updated_msg') %>"}).then(function(){
      window.location = '<%= client_path(@client) %>'
  });
<% else %>
swal({
    icon: "error",
    title: 'Oops..!',
    buttons: false,
    timer: 3000,
    text: "<%= @client.errors.full_messages.join('.') %>"
});

<% end %>