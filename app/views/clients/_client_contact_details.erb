<br>
<div class="row">
  <h5 id="step2" class="text-blue title-heading intro clients-new-false-intro"><%= t('Client Detail') %></h5>

  <div id="add_Detail" class="fields_content_data">
    <div class="row">
      <%= f.input :city, wrapper_html: { class: 'input-field col s4 m4' } %>
      <%= f.input :postal_zip_code, wrapper_html: { class: 'input-field col s4 m4' } %>
      <%= f.input :fax, wrapper_html: { class: 'input-field col s4 m4' } %>

    </div>

    <div class="row">
      <%= f.input :address_street1, wrapper_html: { class: 'input-field col s12 m12' } %>
      <%= f.input :address_street2, wrapper_html: { class: 'input-field col s12 m12' } %>
    </div>

    <%= f.input :country, collection: COUNTRY_LIST,prompt: t('views.common.select_a_country'),
                input_html: { class: 'input-select client_select_2' }, wrapper_html: {class: 'col m3 s6 client-company'} %>
    <%= f.input :province_state, label: 'Province', wrapper_html: { class: 'input-field col s3 m3 country_state_text_field' } %>
    <%= f.input :province_state, label: 'State', collection: US_STATES_LIST,prompt: t('views.common.select_a_country'),
                input_html: { class: 'input-select client_select_2', name: 'client[province_state_us]' }, wrapper_html: {class: 'col m3 s6 us_state_dropdown'} %>
    <%= f.input :province_state, label: 'State', collection: CANADA_STATES,prompt: t('views.common.select_a_country'),
                input_html: { class: 'input-select client_select_2', name: 'client[province_state_ca]' }, wrapper_html: {class: 'col m3 s6 canada_state_dropdown'} %>

    <%= f.input :currency_id, collection: Currency.unscoped.collect{|c| ["#{c.unit}",c.id] },
                selected: (@client.currency_id.present? ? @client.currency_id : nil),
                prompt: t('views.invoices.select_currency'),
                input_html: { class: 'input-select client_select_2', disabled: currency_is_off? }, wrapper_html: {class: 'col m3 s6 client-company'} %>

    <%= f.input :industry, collection: INDUSTRY_LIST, prompt: t('views.clients.select_an_industry'),
                input_html: { class: 'small tax2 client_select_2' }, wrapper_html: {class: 'col m3 s6 client-company'} %>
  <div class="row">
    <%= f.input :company_size, collection: COMPANY_SIZE, prompt: t('views.clients.select_company_size'),
                input_html: { class: 'small tax2 client_select_2' }, wrapper_html: {class: 'col m3 s6 client-company'} %>
    <div class="invoice-add-notes clients-notes-alignment">
      <a href="#"><i class="material-icons">chat</i> </a>
      <%= f.input :internal_notes, label: false, as: :text, input_html: { placeholder: t('views.common.add_notes'), maxlength: 400},
                  wrapper_html: { class: 'invoice-add-notes-textare'} %>
    </div>

  </div>

  </div>
</div>

