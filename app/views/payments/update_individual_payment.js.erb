<% if @paid_invoice_ids.present? %>
  swal({
      icon: "success",
      title: 'Success',
      buttons: false,
      timer: 3000,
      text: "<%= t('views.payments.bulk_payment_recorded_msg', paid_ids: @paid_invoice_ids.join(',')) %>"}).then(function(){
      window.location = '<%= @where_to_redirect %>'
  });
<% elsif @unpaid_invoice_ids.present? %>
  swal({
      icon: "error",
      title: 'Oops..!',
      buttons: false,
      timer: 3000,
      text: "<%= t('views.payments.bulk_payment_failed_msg', unpaid_ids: @unpaid_invoice_ids.join(',')) %>"
  });
<% end %>
