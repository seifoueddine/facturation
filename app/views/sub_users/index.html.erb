<%= render 'user_activity'%>
<div id="main-content" class='<%= "#{ 'side-show' if side_nav_opened?}"%>'>
  <!--- main content --->
  <div class="flex-wrapper">
    <!--- breadcrum Bar --->
    <div class="flex-item breadcrum-bar">
      <div class="card-white-panel ">
        <h3 class="with-grid-icons">
          <span><%= link_to 'Settings', settings_path %></span>
          <%= link_to " / Users", 'javascript:;', class: 'active' %>
          <%= index_layout_toggle_icons(sub_users_path(layout_toggle_params(view: 'card')),
                                        sub_users_path(layout_toggle_params(view: 'table'))) %>
        </h3>
      </div>
    </div>
  </div>
  <%= render 'filters' %>
  <div class="invoice-box">
    <div class="search_result_container">
      <%= render 'sub_users_container'%>
    </div>
    <div style="" class="right">
      <%= link_to ' + New User ', new_sub_user_path, remote: true, class: "#{(@sub_users.count > 0 && @sub_users.count <= 9) || @sub_users.count == 0 ? "secondary_new_link" : 'primary_new_link'}"  %>
    </div>
  </div>
</div>
<script>
  initFilterEvents('#create_at_start_date,#create_at_end_date');
  <% if is_filter_applied?(%w(create_at_start_date create_at_end_date role_ids)) %>
  $('#filters').slideDown('slow');
  $('#toggle_filters').attr('title', I18n.t('views.common.hide_filters'));
  <% end %>
</script>
