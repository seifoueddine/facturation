$('#select_all_roles').change(function (){
    if ($(this).is(':checked')){
        $('.role-access').prop('checked', true)
        $('.all-check').prop('checked', true)
    }
    else {
        $('.role-access').prop('checked', false)
        $('.all-check').prop('checked', false)
    }

})
